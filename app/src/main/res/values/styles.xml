<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="storyImageRadius" format="dimension" />
    <attr name="storyItemIndicatorWidth" format="dimension" />
    <attr name="spaceBetweenImageAndIndicator" format="dimension" />
    <attr name="pendingIndicatorColor" format="color" />
    <attr name="visitedIndicatorColor" format="color" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>



    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.Inactive</item>
    </style>

    <style name="BottomNavigationView.Inactive">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Segment" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
    </style>

    <style name="DataInputLine" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="background">@color/white</item>
        <item name="boxStrokeWidth">1px</item>
        <item name="boxStrokeWidthFocused">1px</item>
    </style>


    <style name="DataInputLineInputField" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Name on Card</item>
    </style>

    <style name="SwitchLineParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SwitchLine" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="SwitchLabel">
        <item name="paddingStart">16dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="AppBarTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="payment_sys_selection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>




    <style name="InputFieldParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/exb_cool_gray</item>
    </style>
</resources>
